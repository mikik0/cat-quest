<p><%= @content.youtube_url %></p>
<iframe width="800" height="450" src="<%= @content.youtube_url.gsub("watch?v=","embed/") %>?loop=1" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

<p>メモ機能</p>
<%= form_with model:[@quest,@content], url: new_user_quest_content_path, data: {remote: true} do |f| %>
    <div>
        <%= f.label :本文 %><br>
        <%= f.text_field :text, autofocus: true, id: "text" %>
    </div>
    <div><%= f.submit "投稿する" %></div>
<% end %>

<p>一覧</p>
<% @content.memos.each do |memo| %>
    <tr>
        <td><%= memo.id %></td>
        <td><%= memo.text %></td>
    </tr>
<% end %>
