<p id="notice"><%= notice %></p>

<h1>Quests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>total_video_time</th>
      <th>strated_at</th>
      <th>finished_at</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.title %></td>
        <td><%= quest.description %></td>
        <td><%= quest.total_video_time %></td>
        <td><%= quest.strated_at %></td>
        <td><%= quest.finished_at %></td>
        <td><%= link_to 'Show', quest %></td>
        <% if current_user.owner?(quest.id) %>
          <td><%= link_to 'Edit', edit_quest_path(quest) %></td>
          <td><%= link_to 'Destroy', quest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quest', new_quest_path %>
