<%= nested_form_for(@quest) do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% quest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :詳細 %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :開始日 %>
    <%= form.datetime_select :strated_at %>
  </div>

  <div class="field">
    <%= form.label :締め切り %>
    <%= form.datetime_select :finished_at %>
  </div>

  <div class="field">
  <%= form.fields_for :contents do |c| %>
    <%= c.label :youtube_url %>
    <%= c.text_field :youtube_url %>
    <%= c.link_to_remove "削除" %>
  <% end %>
  </div>
  <%= form.link_to_add "リンク追加", :contents %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
